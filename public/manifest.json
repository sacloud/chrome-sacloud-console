{
  "name": "UsaCon",
  "manifest_version": 3,
  "version": "0.2.0",
  "description": "A browser extension for using SakuraCloud CLI in the control panel",
  "icons": {
    "128": "icon_128.png"
  },
  "host_permissions": ["https://secure.sakura.ad.jp/cloud/iaas*"],
  "content_scripts" : [
    {
      "matches": [ "https://secure.sakura.ad.jp/cloud/iaas*" ],
      "js": ["content.bundle.js"]
    }
  ],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "browser_style": true,
    "default_icon": "icon_128.png",
    "default_title": "UsaCon"
  },
  "web_accessible_resources": [{
    "resources": [
      "usacloud.wasm",
      "uutils.wasm",
      "worker.bundle.js",
      "usacloud-horizontal.svg"
    ]
  }]
}